{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "ignorePaths": [
        "**/ui/**"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)build-images?\\.sh$/"
            ],
            "matchStrings": [
                "docker\\.io\\/(?:library\\/)?(?<depName>[-0-9a-z_\\/.]+):(?<currentValue>[-0-9a-zA-Z_.]+)",
                "(?<depName>(?:ghcr|quay)\\.io\\/[-0-9a-z_\\/.]+):(?<currentValue>[-0-9a-zA-Z_.]+)"
            ],
            "datasourceTemplate": "docker"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "node"
            ],
            "allowedVersions": "<=18"
        },        
        {
            "matchDatasources": ["docker"],
            "matchPackageNames": ["docker.io/linuxserver/unifi-network"],
            "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-ls(?<build>.+)$"
        }
    ]
}
