{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get unifi-network settings",
    "$id": "http://nethserver.org/json-schema/task/input/unifi-network/get-configuration",
    "description": "Get unifi-network settings",
    "examples": [
        {
            "host": "unifi-network.domain.org",
            "port": 8080,
            "http2https": true,
            "lets_encrypt": true
        }
    ],
    "type": "object",
    "required": [
        "host",
        "port",
        "http2https",
        "lets_encrypt"
    ],
    "properties": {
        "host": {
        "type": "string",
        "description": "Host name for the application, like 'unifi-network.domain.org'",
        "format": "idn-hostname"
    },
	"port": {
        "type": "integer",
        "title": "port",
        "description": "The port for device communication",
        "minimum": 1024,
        "maximum": 65535
    },
	"lets_encrypt": {
        "type": "boolean",
        "title": "Let's Encrypt certificate",
        "description": "Request a valid Let's Encrypt certificate."
        },
	"http2https": {
        "type": "boolean",
        "title": "HTTP to HTTPS redirection",
        "description": "Redirect all the HTTP requests to HTTPS"
        }
    }
}
